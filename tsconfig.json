{
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "ES2015",
        "module": "ESNext",
        "moduleResolution": "node",
        // fix for imported enums being undefined in vitest
        "noResolve": false,
        "allowJs": false,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "isolatedModules": true,
        "declaration": true,
        "outDir": "dist"
    },
    "include": [
        "src",
    ],
    "exclude": [
        "dist/**/*"
    ],
}